[user]
    name = Justin Van Winkle
    email = justin@milo.com

[push]
    default = current

[alias]
    ci = commit -am
    rb = !sh -c 'git checkout --track -b $1 origin/$1'
    w = diff -M -w --color-words

[log]
    color = auto

[grep]
    color = auto
    line-number

[apply]
    whitespace = strip

[diff]
    color = auto
    rename = copy
    ignore-space-at-eol = true
    b = true
    w = true
    ignore-blank-lines = true
    algorithm = patience
    renameLimit = 200000
[pager]
    color = true

[status]
    color = auto

[color]
    ui = true
[core]
    pager = less -x4
    mergeoptions = --no-edit
